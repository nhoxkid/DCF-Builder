{
  "name": "@dcf-builder/engine-contract",
  "version": "0.1.0",
  "description": "Shared contract and helpers for the DCF valuation engines",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm run clean && tsup src/index.ts --format esm,cjs --dts --sourcemap",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "pnpm lint -- --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  }
}