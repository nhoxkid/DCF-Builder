{
  "name": "@dcf-builder/engine-wasm",
  "version": "0.1.0",
  "description": "WebAssembly-backed DCF valuation engine",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist",
    "pkg"
  ],
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    },
    "./pkg/*": "./pkg/*"
  },
  "dependencies": {
    "@dcf-builder/engine-contract": "workspace:^"
  },
  "scripts": {
    "clean": "rimraf dist pkg",
    "build:wasm": "node ./scripts/run-wasm-pack.mjs build ../../crates/dcf --target web --out-dir ../../packages/engine-wasm/pkg --out-name dcf",
    "build": "pnpm run clean && pnpm run build:wasm && tsup src/index.ts --format esm,cjs --dts --sourcemap --external ../pkg/dcf.js",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "pnpm lint -- --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "devDependencies": {
    "wasm-pack": "^0.13.0"
  }
}